---
interface Props {
  title: string;
  servicesLabel: string;
  workflowLabel?: string;
  coverageLabel?: string;
}

const { title, servicesLabel, workflowLabel, coverageLabel } = Astro.props;
---

<header class="site-header">
  <div class="container bar">
    <div class="logo">{title}</div>
    <nav>
      <a class="btn btn-ghost" href="#services">{servicesLabel}</a>
      {workflowLabel && <a class="btn btn-ghost" href="#workflow">{workflowLabel}</a>}
      {coverageLabel && <a class="btn btn-ghost" href="#coverage">{coverageLabel}</a>}
    </nav>
  </div>
</header>

